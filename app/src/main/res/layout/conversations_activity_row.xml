<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_conversations_activity_rows"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/circular_choose_image_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tv_username_conversations_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_conversations_activity_rows"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/placeholder"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:textSize="12sp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/tv_latest_message_conversations_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_conversations_activity_rows"
        android:text="@string/placeholder"
        app:layout_constraintTop_toBottomOf="@id/tv_username_conversations_activity"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>