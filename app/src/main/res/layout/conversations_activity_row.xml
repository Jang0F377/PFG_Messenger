<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_conversations_activity_rows"
        app:civ_border_width="2dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/circular_choose_image_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tv_username_conversations_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_conversations_activity_rows"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/placeholder"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_latest_message_conversations_activity"

        />
    <TextView
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:id="@+id/tv_latest_message_conversations_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_conversations_activity_rows"
        android:text="@string/placeholder"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_username_conversations_activity"
        android:layout_marginStart="18dp"
        android:maxWidth="265dp"
        android:maxLines="2"
        android:layout_marginTop="3dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>